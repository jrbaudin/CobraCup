<!DOCTYPE html>
<html lang="en">
 
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
 
    <title>Grupper - Cobra Cup 2015</title>
 
    <!-- Latest compiled and minified CSS -->
    <link href="../../dist/css/vendor/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"> -->

    <!-- Optional theme -->
    <!-- link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"> -->
    <link rel="stylesheet" href="../../dist/css/flat-ui.css">

    <link rel="stylesheet" href="../../stylesheets/style.css">

    <link rel="icon" type="image/png" href="http://media.cobracup.se/2014/11/favicon.png" />
 
    <!-- Custom Fonts -->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
 
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
 
</head>
 
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">The Hub</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                <li><a href="/">Lag</a></li>
                <li><a href="/signup">Anmäl lag</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tabeller <span class="caret"></span></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="/stat/league">Ligan</a></li>
                    <li class="active"><a href="/stat/divisions">Divisioner</a></li>                  
                    <li><a href="/stat/playerstats">Spelarstatistik</a></li>
                  </ul>
                </li>
                <li><a href="http://cobracup.se" target="_blank">cobracup.se</a></li>
              </ul>
              <% if(typeof(count) !== 'undefined'){ %>
                <p class="navbar-text navbar-right"><strong><%= count %>/15 lag</strong></p>
              <% } %>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container-fluid">
        <% if(typeof(flashError) !== 'undefined'){ %>
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <strong>Fel!</strong> <%= flash %>.
            </div>  
        <% } %>
        <div class="col-md-3">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h6 class="panel-title text-uppercase">
                        <span class="fa-stack fa-lg">
                          <i class="fa fa-circle fa-stack-2x"></i>
                          <i class="fa fa-tint fa-stack-1x fa-inverse"></i>
                        </span> <strong>Atlantic Division</strong>
                    </h6>
                </div>
                <div class="panel-body">
                    <button  onclick="window.location.href='/games/group/1'" class="btn btn-hg btn-inverse btn-wide btn-block text-uppercase">Gå till grupp</button>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-md-3 -->
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h6 class="panel-title text-uppercase">
                        <strong>Gruppmatcher</strong>
                    </h6>
                </div>
                <div class="panel-body">              
                    <table class="table table-bordered table-condensed table-striped" style="margin-bottom: 0;">
                        <thead style="font-size: 13px;">
                            <tr>
                                <th class="text-uppercase">Runda</th>
                                <th class="text-uppercase"></th>
                                <th class="text-uppercase">Hemma</th>
                                <th class="text-uppercase"></th>
                                <th class="text-uppercase">Borta</th>
                                <th class="text-uppercase">Spelad</th>
                                <th class="text-uppercase">Tid</th>
                                <th class="text-uppercase">Kommentar</th>
                                <th class="text-uppercase">Rapportera</th>
                            </tr>
                        </thead>
                        <tbody style="font-size: 12px;">
                            <% if((typeof(games) !== 'undefined') && (typeof(teams) !== 'undefined')){
                                console.log("size: " + _.size(games));
                                games.forEach(function(game) {

                                    var hometeam = null;
                                    var awayteam = null;

                                    teams.forEach(function(team) {
                                        if(_.isEqual(team.id, game.get("home").id)){
                                            hometeam = team;
                                        } else if(_.isEqual(team.id, game.get("away").id)){
                                            awayteam = team;
                                        }
                                    })

                                    var played = "Nej";
                                    if(game.get("played")){
                                        played = "Ja";
                                    }

                                    %>
                                    <tr>
                                        <td><%= game.get("round") %></td>
                                        <td><img src="<%= hometeam.get("nhlTeam").get("logo").url() %>" class="img-responsive img-circle" alt="Responsive image" style="min-height:15px;height:15px; margin: 0 auto;"></td>
                                        <td><%= hometeam.get("team_name") %></td>
                                        <td><img src="<%= awayteam.get("nhlTeam").get("logo").url() %>" class="img-responsive img-circle" alt="Responsive image" style="min-height:15px;height:15px; margin: 0 auto;"></td>
                                        <td><%= awayteam.get("team_name") %></td>
                                        <td><%= played %></td>
                                        <td class="text-capitalize"><%= justTime(game.get("date")) %></td>
                                        <td><%= game.get("comment") %></td>
                                        <td><% if(game.get("result_submitted")) { %> 
                                                <button  onclick="window.location.href='/stat/game/<%= game.get("game_id") %>'" class="btn btn-xs btn-warning btn-wide btn-block text-uppercase">Uppdatera</button>
                                            <% } else { %>
                                                <button  onclick="window.location.href='/stat/game/<%= game.get("game_id") %>'" class="btn btn-xs btn-success btn-wide btn-block text-uppercase">Rapportera</button>
                                            <% } %>
                                        </td>   
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-md-9 -->
    </div>
    <!-- /.container -->

    <p class="text-center" style="margin-top: 2.5em;"><small>&copy; 2014 Copyright The Cobra Cup</small></p>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="../..//dist/js/vendor/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../..//dist/js/flat-ui.min.js"></script>
</body>
 
</html>