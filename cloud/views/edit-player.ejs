                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-gamepad fa-fw"></i></div>

                                    <% if((typeof(player[0].get("gamertag")) !== 'undefined') && (!_.isEmpty(player[0].get("gamertag")))){ %>
                                        <input type="text" class="form-control" id="gamertag" placeholder="Doktorpung" name="gamertag" value="<%= player[0].get("gamertag") %>">
                                    <% } else { %>
                                        <input type="text" class="form-control" id="gamertag" placeholder="Gurklaxen" name="gamertag">
                                    <% } %>

                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label for="gamertag" class="control-label">PlayStation Network ID</label>
