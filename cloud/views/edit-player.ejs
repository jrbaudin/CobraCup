                                    <% if((typeof(player[0].get("twitter")) !== 'undefined') && (!_.isEmpty(player[0].get("twitter")))){ %>
                                        <input type="text" class="form-control" id="twitter" placeholder="CobraCup" name="twitter" value="<%= player[0].get("twitter") %>">
                                    <% } else { %>
                                        <input type="text" class="form-control" id="twitter" placeholder="CobraCup" name="twitter">
                                    <% } %>

                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="facebook" class="control-label">Facebook profillänk</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-facebook fa-fw"></i></div>

                                    <% if((typeof(player[0].get("facebook")) !== 'undefined') && (!_.isEmpty(player[0].get("facebook")))){ %>
                                        <input type="text" class="form-control" id="facebook" placeholder="https://www.facebook.com/TheCobraCup" name="facebook" value="<%= player[0].get("facebook") %>">
                                    <% } else { %>
                                        <input type="text" class="form-control" id="facebook" placeholder="https://www.facebook.com/TheCobraCup" name="facebook">
                                    <% } %>

                                </div>
                            </div>
                            
                            <div class="row" style="margin-left:0px;">
                                
                                <div class="form-group col-md-6">
                                    <label for="password" class="control-label sr-only">Lösenord</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-key fa-fw"></i></div>
                                        <input type="password" class="form-control" id="formPassword" placeholder="Ditt lösenord" name="formPassword" required>
                                    </div>
                                </div>

                                <div class="form-group col-md-6" id="passFG">
                                    <input type='hidden' name='_method' value='put' />
                                    <input type='hidden' name='dbPassword' id='dbPassword' value='<%= player[0].get("password") %>' />
                                    <button type="submit" class="btn btn-lg btn-primary btn-wide" onclick="_gs('event', 'Clicked to update Player')">Uppdatera</button>
                                </div>
                                
                            </div>

                        </form>
                        
                    </div>
                </div>
            </div>
        <% } else { %>
            <p>Player är undefined... </p>
        <% } %>
    </div>

