    <script type="text/javascript">
        function checkPassword() {
            var formPassword = document.getElementById("formPassword").value;
            var dbPassword = document.getElementById("dbPassword").value;
            //alert("formPassword = " + formPassword + " & dbPassword = " + dbPassword);

            if (dbPassword === formPassword) {
                //alert("Passwords matched!");
                return true;
            } else {
                //event.preventDefault();
                //alert("Passwords didn't match!");
                $("#passNoMatch").show();
                //document.getElementById("formPassword").className += "has-error"; 
                return false;
            }
        };
    </script>
</head>

